name="pterodactyl daemon"
description=""
command=/usr/bin/wings
command_args="--config /etc/pterodactyl-daemon/config.yml"
command_user=pterodactyl
directory="/etc/pterodactyl-daemon"
command_background=1
pidfile="/run/${SVCNAME}.pid"
output_log="/var/log/pterodactyl-daemon.log"
error_log="${output_log}"
stopsig=SIGINT

depend() {
	need net docker
}