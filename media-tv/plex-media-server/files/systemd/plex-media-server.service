[Unit]
Description=Plex Media Server
After=network.target network-online.target

[Service]
ExecStart=/usr/sbin/start_pms
Environment="PLEX_MEDIA_SERVER_USE_SYSLOG=true"
Type=simple
User=plex
Group=plex
Restart=on-failure
RestartSec=5
StartLimitInterval=60s
StartLimitBurst=3

[Install]
WantedBy=multi-user.target
